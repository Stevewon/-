# VoIP 알람 서버 환경 변수

# 서버 포트
PORT=3002

# JWT 시크릿
JWT_SECRET=voip_alarm_super_secret_key_change_in_production

# Firebase Admin SDK (FCM Push를 위해 필요)
# Firebase Console에서 서비스 계정 키 생성 후 경로 입력
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# 데이터베이스
DATABASE_PATH=./voip_alarm.db

# 파일 업로드 디렉토리
UPLOAD_DIR=./uploads

# 최대 파일 크기 (바이트 단위, 50MB)
MAX_FILE_SIZE=52428800
